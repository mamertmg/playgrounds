<div class="top-container container">

  <!-- nav for mobile view -->
  <nav id="nav-landpage" class="navbar fixed-top ">

    <div class=" mx-auto d-md-none d-lg-none d-xl-none">
      <button id="searchbtn" type="button" class="btn btn-light btn-md rounded-pill text-muted px-5" data-bs-toggle="modal" data-bs-target="#searchBoxModal">
        Find playgrounds now </button>
    </div>


  </nav>


</div>
<!-- nav for tablet and laptop -->
<nav class="navbar fixed-top navbar-expand-md navbar-light bg-light d-none d-md-block d-lg-block d-xl-block">
  <div class="d-grid">
    <div class="row">
      <div class="navbar col-2 d-flex justify-content-center">
        <ul class="navbar-nav ">
          <li class="nav-item">
            <a class="navbar-brand" href="/"><img src="/images/base/playground.png" alt="logo" height="40" loading="lazy"></a>
          </li>

        </ul>
      </div>

      <div class="col-6 my-2">

        <!-- form for address and search radius in tablet and laptop view , please add action here! -->

        <form id="searchForm" action="/search" method="get">

          <div class="input-group d-flex align-items-center">

            <div>

              <label class="fw-bold" for="selectSearchRadius">Search radius:</label>

              <select name="dist" class="me-2" id="selectSearchRadius">
                <% for(let i = 1; i < 6; i++) { %>
                <option value="<%= i %>" <%= i === 1 ? "selected" : "" %>><%= i %> km</option>
                <% } %>
              </select>

            </div>

            <label for="autocomplete2"></label>

            <input class="autocomplete" id="autocomplete2" placeholder="Enter address" type="search">

            <button type="submit" class="btn btn-danger btn-sm rounded-circle"><i class="fas fa-lg fa-search"></i></button>

          </div>


        </form>

      </div>

      <div class="navbar col-4 d-flex justify-content-center">

        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/playgrounds/new">Add new playground</a>
          </li>
          <% if(isAuthenticated) { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Sign up</a>
          </li>
          <% } %>
        </ul>

      </div>
    </div>
  </div>


</nav>

<div class="modal d-md-none d-lg-none d-xl-none" id="searchBoxModal" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen-md-down ">
    <div class="modal-content">

      <!-- search form for mobile view-->

      <form class="" id="searchform-landingpage-mobileview" action="/search" method="get" autocomplete="off">
        <div class="modal-header">

          <i class="fa fa-md fa-map-marker" aria-hidden="true" onclick='getLocation()'></i>
          <label for="autocomplete1" class="form-label col-1"></label>
          <input class="modal-title col-10 border-0 autocomplete " id="autocomplete1" placeholder="Enter address" type="search">

          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

        </div>
        <div class="modal-body">

          <div class="my-2">

            <h3>How close should it be?</h3>

            <label for="dist">
              Search radius in km:
            </label> <br>
            <input id="searchRadiusMobile" name="dist" type="range" value="1" min="1" max="5" class=" d-flex justify-content-center form-range w-100 mt-2 rounded-pill" oninput="this.nextElementSibling.value = this.value">
            <output class="d-flex justify-content-center">1</output>

          </div>


        </div>

        <div class="modal-footer mb-0">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
    </div>

  </div>
</div>

<nav class="navbar fixed-bottom navbar-light bg-light d-md-none d-lg-none d-xl-none">
  <div class="container">
    <ul class="navbar-nav mx-auto my-0 d-flex flex-row">

      <!-- please add link for add playground -->

      <li class="nav-item text-center mx-2">
        <a class="nav-link" href="/playgrounds/new">
          <div>
            <i class="fa fa-lg fa-plus-circle"></i>
          </div>
          <h6>Contribute</h6>
        </a>
      </li>

      <!-- please add link for login -->

      <li class="nav-item text-center mx-2">
        <a class="nav-link" href="<%= isAuthenticated ? "/logout" : "/login" %>">
          <div>
            <i class="far fa-lg fa-user-circle"></i>
          </div>
          <% if(!isAuthenticated) { %>
          <h6>Login</h6>
          <% } else { %>
          <h6>Logout</h6>
          <% } %>
        </a>
      </li>
    </ul>

  </div>
</nav>